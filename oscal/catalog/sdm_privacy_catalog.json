            "links": [
                {
                    "href": "#TOM-03",
                    "rel": "related-control",
                    "text": "Begründung: Wirksamkeit von TOM-03 hängt unmittelbar von einem kontrollierten Schlüssel- und Geheimnis-Management ab (Generierung, Rotation, Schutz, Entzug)."
                }
            ],
            "parts": [
              {
                "id": "sdm-tom-cr-02-stmt",
                "name": "statement",
                "prose": "Die Organisation betreibt ein strukturiertes Management für kryptografische Schlüssel und andere Geheimnisse (z.B. API-Keys, Tokens, Passwörter) über den gesamten Lebenszyklus."
              },
              {
                "id": "sdm-tom-cr-02-typical-measures",
                "name": "typical-measures",
                "prose": "Beispiele für technische und organisatorische Maßnahmen:",
                "parts": [
                  {
                    "id": "sdm-tom-cr-02-typical-measure-01",
                    "name": "typical-measure",
                    "prose": "Verwendung dedizierter Secrets-Management-Lösungen oder HSMs zur sicheren Generierung, Speicherung und Rotation kryptografischer Schlüssel und Geheimnisse."
                  },
                  {
                    "id": "sdm-tom-cr-02-typical-measure-02",
                    "name": "typical-measure",
                    "prose": "Definierte Prozesse und Intervalle für Schlüsselrotation und -widerruf (z.B. bei Kompromittierung, Mitarbeiterwechsel, Ende von Dienstleistungsverhältnissen)."
                  },
                  {
                    "id": "sdm-tom-cr-02-typical-measure-03",
                    "name": "typical-measure",
                    "prose": "Strikte Trennung von Rollen (z.B. Systemadministration, Security, Entwicklung) und Logging von Zugriffen auf Schlüsselmaterial."
                  }
                ]
              }
            ]
          }
